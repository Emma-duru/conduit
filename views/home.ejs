<%- include("./layout/header") %> 
<h1 class="my-4 text-center">Posts</h1>

<% posts.forEach(post => { %>
<div class="row d-flex justify-content-center">
  
  <div class="col-lg-10">  <!-- Card -->
<div class="card my-2">

    <div class="card-header">
        <h4 class="card-title"><a href="/post/<%= post._id %> "><%= post.title %></a> </h4>
        <small class="text-muted">Posted by <%= post.author.username %> on <%= post.date %> </small>
    </div>
    <div class="card-body">
        <!-- Text -->
        <p class="card-text"><%= post.description %> </p>
        <!-- Button -->
        <small><a href="/post/<%= post._id %> ">Read More</a></small>

    </div>
</div>
<!-- Card -->
</div>
</div>
<% }) %> 

<%- include("./layout/footer") %> 